{
	"$schema": "https://json.schemastore.org/electron-builder.json",
	"appId": "ocs.enncy.cn",
	"extraMetadata": {
		"name": "OCS Desktop",
		"description": "OCS 浏览器自动化神器，一键浏览器多开，用户脚本环境一键配置。"
	},
	"productName": "OCS Desktop",
	"asar": false,
	"copyright": "Copyright © 2021 ${author}",
	"nsis": {
		"oneClick": false,
		"perMachine": true,
		"allowToChangeInstallationDirectory": true
	},
	"win": {
		"icon": "public/favicon.png",
		"artifactName": "ocs-${version}-setup-${os}-${arch}.${ext}",
		"target": [
			{
				"target": "nsis",
				"arch": ["x64", "ia32", "arm64"]
			}
		],
		"requestedExecutionLevel": "highestAvailable",
		"extraResources": [
			{
				"from": "../../bin/",
				"to": "bin",
				"filter": ["**/*.zip"]
			}
		]
	},
	"mac": {
		"icon": "public/favicon.icns",
		"artifactName": "ocs-${version}-setup-${os}-${arch}.${ext}",
		"target": [
			{
				"target": "zip",
				"arch": ["x64", "arm64"]
			},
			{
				"target": "dmg",
				"arch": ["x64", "arm64"]
			},
			{
				"target": "pkg",
				"arch": ["x64", "arm64"]
			}
		],
		"extraResources": [
			{
				"from": "../../bin/",
				"to": "bin",
				"filter": ["**/*.zip"]
			}
		]
	},
	"linux": {
		"icon": "public/favicon.png",
		"artifactName": "ocs-${version}-setup-${os}-${arch}.${ext}",
		"target": [
			{
				"target": "AppImage",
				"arch": ["x64", "arm64"]
			}
		],
		"extraResources": [
			{
				"from": "../../bin/",
				"to": "bin",
				"filter": ["**/*.zip"]
			}
		]
	}
}
